<div class="view">
  <input
    type="checkbox"
    class="toggle"
    checked={{todo.completed}}
    onchange={{action 'toggleCompleted'}}>
  <label
    ondblclick={{action 'startEditing'}}>
    {{todo.title}}
  </label>
  <div class="date">
  {{#unless showCalendar}}
    <button onclick={{action 'showCalendar'}}>calendar</button>
  {{else}}
    <input type="date">
  {{/unless}}
  </div>
  <button
    onclick={{action 'removeTodo'}}
    class="destroy">
  </button>
</div>
<input
  type="text"
  class="edit"
  value={{todo.title}}
  onblur={{action 'doneEditing' value='target.value'}}
  onkeydown={{action 'handleKeydown'}}
  autofocus>